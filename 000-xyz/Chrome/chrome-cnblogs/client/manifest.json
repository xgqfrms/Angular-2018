{
    "manifest_version": 2,
    "name": "cnblogs.com article information",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "jquery-2.0.0.min.js",
            "background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "cnblogs_16.png",
            "38": "cnblogs_38.png"
        },
        "default_title": "cnblogs.com article information",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://localhost/"
    ],
    "content_scripts": [{
        "matches": ["http://www.cnblogs.com/*"],
        "js": [
            "jquery-2.0.0.min.js",
            "content_script.js"
        ]
    }]
}